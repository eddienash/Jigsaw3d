<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!--
    <include
        android:id="@+id/adView"
        layout="@layout/adview" />
    -->

    <!-- android:layout_above="@id/adView" -->

    <LinearLayout
        android:id="@+id/layoutWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/txtHelp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutWelcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnNewPuzzle"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_new" />

        <Button
            android:id="@+id/btnResumePuzzle"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_resume" />

        <Button
            android:id="@+id/btnHelp"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_help" />

        <Button
            android:id="@+id/btnStatistics"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_stats" />

        <Button
            android:id="@+id/btnPreference"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_prefs" />
        
        <Button
            android:id="@+id/btnFeedback"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_feedback" />

        <Button
            android:id="@+id/btnLegal"
            style="@style/MenuButtonXlarge"
            android:layout_marginTop="20dp"
            android:text="@string/btn_welcome_legal" />

        </LinearLayout>

</RelativeLayout>