<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toychest3d.Jigsaw3d"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" 
        android:targetSdkVersion="10"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- required for admobs -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="Jigsaw3D" >
        <activity
            android:name=".Welcome.WelcomeActivity"
            android:label="Jigsaw3D" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Puzzle.PuzzleActivity"
            android:theme="@style/LargeTitleTheme" >
        </activity>
        <activity android:name=".Selector.SelectorActivity" >
        </activity>
        <activity android:name=".Preferences.PreferencesActivity" >
        </activity>
        <activity android:name=".Statistics.StatisticsActivity" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>